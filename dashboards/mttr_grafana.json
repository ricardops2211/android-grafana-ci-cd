{
  "uid": "sre-mttr-lab",
  "title": "SRE MTTR Lab",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "MTTR (min)",
      "gridPos": {"x":0, "y":0, "w":6, "h":4},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"], "values": false}},
      "targets": [
        {
          "datasource": {"type": "loki"},
          "expr": "{app=\"podinfo\", metric=\"mttr\"} | json | unwrap mttr_seconds"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "m"}, "overrides": []}
    },
    {
      "type": "logs",
      "title": "Logs MTTR (Loki)",
      "gridPos": {"x":0, "y":4, "w":12, "h":8},
      "targets": [
        {
          "datasource": {"type": "loki"},
          "expr": "{app=\"podinfo\", metric=\"mttr\"}"
        }
      ]
    }
  ],
  "time": {"from": "now-24h", "to": "now"}
}
