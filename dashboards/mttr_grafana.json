{
  "uid": "sre-mttr-lab",
  "title": "SRE MTTR Lab",
  "schemaVersion": 39,
  "version": 1,
  "time": { "from": "now-24h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "MTTR (min) – último",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "values": false } },
      "targets": [
        {
          "datasource": { "type": "loki" },
          "expr": "max_over_time(( {metric=\\\"mttr\\\", app=\\\"podinfo\\\", env=\\\"ci\\\"} | json | unwrap mttr_seconds )[2h]) / 60"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "m" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "MTTR por incidente (min)",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki" },
          "expr": "( {metric=\\\"mttr\\\", app=\\\"podinfo\\\", env=\\\"ci\\\"} | json | unwrap mttr_seconds ) / 60"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "m" }, "overrides": [] }
    },
    {
      "type": "bargauge",
      "title": "Incidentes por hora (últimas 24h)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki" },
          "expr": "sum by (severity) ( count_over_time({metric=\\\"mttr\\\"}[1h]) )"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "piechart",
      "title": "Incidentes por severidad (24h)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki" },
          "expr": "sum by (severity) ( count_over_time({metric=\\\"mttr\\\"}[24h]) )"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "right" },
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "table",
      "title": "Top servicios por incidentes (24h)",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki" },
          "expr": "sum by (service) ( count_over_time({metric=\\\"mttr\\\"}[24h]) )"
        }
      ],
      "options": { "showHeader": true }
    },
    {
      "type": "logs",
      "title": "Logs MTTR (crudos)",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki" },
          "expr": "{metric=\\\"mttr\\\", app=\\\"podinfo\\\", env=\\\"ci\\\"}"
        }
      ]
    }
  ]
}
